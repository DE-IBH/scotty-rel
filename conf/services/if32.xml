<!--
    Service: SNMP Interface Counters (32bit)
    Parameters:
	%1%	label
	%2%	ifIndex
	%3%	down state
	%4%	up state
-->
<service label="%1%">
    <sensor name="Scotty::Sensor::snmp">
	<config>
	    <in>
		<oid>IF-MIB::ifInOctets.%2%</oid>
		<label>In</label>
		<color>green</color>
		<unit>Bps</unit>
		<smin>0</smin>
		<smax>IF-MIB::ifSpeed.%2%</smax>
	    </in>
	    <out>
		<oid>IF-MIB::ifOutOctets.%2%</oid>
		<label>Out</label>
		<color>blue</color>
		<unit>Bps</unit>
		<smin>0</smin>
		<smax>IF-MIB::ifSpeed.%2%</smax>
	    </out>
	    <status>
		<oid>IF-MIB::ifOperStatus.%2%</oid>
		<label>Status</label>
		<monitor eval="!= 2" state="%3%"/>
		<monitor eval="== 2" state="%4%"/>
	    </status>
	</config>
    </sensor>
</service>
