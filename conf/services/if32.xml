<!--
    Service: SNMP Interface Counters (32bit)
    Parameters:
	%1%	label
	%2%	ifIndex
	%3%	down state
	%4%	up state
-->
<service label="%1%">
    <sensor name="Scotty::Sensor::snmp">
	<config>
	    <in>
		<oid>IF-MIB::ifInOctets.%2%</oid>
		<label>In</label>
		<color>green</color>
		<unit>Bps</unit>
		<min>0</smin>
		<max>%{IF-MIB::ifSpeed.%2%}%</max>
	    </in>
	    <out>
		<oid>IF-MIB::ifOutOctets.%2%</oid>
		<label>Out</label>
		<color>blue</color>
		<unit>Bps</unit>
		<min>0</min>
		<max>${IF-MIB::ifSpeed.%2%}</max>
	    </out>
	    <status>
		<oid>IF-MIB::ifOperStatus.%2%</oid>
		<label>Status</label>
		<monitor>(%v% != 2 ? %3% : %4%)</monitor>
	    </status>
	</config>
    </sensor>
</service>
