<!--
    Service: SNMP Interface Counters (64bit), customized speed
    Parameters:
	%1%	label
	%2%	ifIndex
	%3%	ifSpeed
	%4%	down state
	%5%	up state
-->
<service label="%1%">
    <sensor name="Scotty::Sensor::snmp">
	<config>
	    <in>
		<oid>IF-MIB::ifHCInOctets.%2%</oid>
		<label>In</label>
		<color>green</color>
		<unit>Bps</unit>
		<min>0</min>
		<max>%3%</max>
	    </in>
	    <out>
		<oid>IF-MIB::ifHCOutOctets.%2%</oid>
		<label>Out</label>
		<color>blue</color>
		<unit>Bps</unit>
		<min>0</min>
		<max>%3%</max>
	    </out>
	    <status>
		<oid>IF-MIB::ifOperStatus.%2%</oid>
		<label>Status</label>
		<monitor>(%v% != 2 ? %3% : %4%)</monitor>
	    </status>
	</config>
    </sensor>
</service>
