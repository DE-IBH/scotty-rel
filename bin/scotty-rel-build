paths=${1:-/etc/scotty-rel/paths.conf}
. "$paths"

echo "Creating views.xml..."
"$LIBDIR/mkservices" "$paths"

echo "Creating hosts.xml..."
"$LIBDIR/mkhosts" "$paths"

echo "Creating HTML files..."
for tpl in $TPLDIR/*.tpl; do
    html=`basename "${tpl%tpl}html"`
    echo " $html"
    "$LIBDIR/mkindex" "$tpl" "$WWWDIR/$html" "$VIEWSDIR"
done
